@import url(https://fonts.bunny.net/css?family=roboto:400,700)

$Tomato = hsl(4, 100%, 67%)
$Dark-Slate-Grey = hsl(234, 29%, 20%)
$Charcoal-Grey = hsl(235, 18%, 26%)
$Grey = hsl(231, 7%, 60%)
$White = hsl(0, 0%, 100%)

// reset
*
    margin: 0
    box-sizing: border-box
    font-family: 'Roboto', sans-serif

body 
    font-size: 16px
    background-color: $Dark-Slate-Grey

p 
    line-height: 1.5rem

main 
    width: 100%
    min-height: 100vh
    background-color: $White

.card 
    width: 100%
    max-width: 420px
    background-color: $White
    display: flex
    flex-direction: column
    padding: 0
    margin: 0 auto

picture 
    width: 100%
    img 
        width: 100%

.card__content
    padding: 1.5rem
    p 
        padding-bottom: 1rem

.card__title 
    font-size: 2.5rem
    margin-bottom: 1rem

.feature__list
    list-style: none
    padding: 0

.feature__item 
    line-height: 1.5rem
    padding-bottom: 1rem
    padding-left: 2.5rem
    position: relative

.feature__item::before 
    content: url("./assets/images/icon-list.svg")
    position: absolute
    left: 0

form 
    margin: 1rem 0

label 
    display: flex
    justify-content: space-between
    font-size: 0.85rem
    font-weight: 700
    margin-bottom: 0.5rem

.error 
    display: none
    color: $Tomato

input 
    display: block
    width: 100%
    border: 1px solid $Charcoal-Grey
    border-radius: 0.5rem
    font-size: 1rem
    padding: 1rem 1.5rem

button 
    display: block
    width: 100%
    background-color: $Dark-Slate-Grey
    border: 0
    border-radius: 0.5rem
    color: $White
    font-size: 1rem
    padding: 1rem 1.5rem
    margin: 1.5rem 0
    cursor: pointer
    transition: all 150ms ease-in

button:hover 
    box-shadow: 2px 5px 30px 0px rgba(26, 20, 19, 0.4);
    transition: all 50ms ease-in

button:active 
    background-color: $Tomato
    box-shadow: 2px 10px 30px 0px rgba(250,105,65,0.6);
    transition: all 50ms ease-in

dialog
    width: 100%
    height: 100vh
    border: 0
    margin: auto auto 0 auto
    .card
        height: 100%
        justify-content: flex-end
        padding: 0
    
dialog::backdrop 
    background-color: $White

.confirmation
    display: flex
    flex-direction: column
    justify-content: space-between
    height: 100%
    padding-top: 5rem

.confirmation__icon 
    padding: 2rem 0

.confirmation__email 
    font-weight: 700

.invalid .error
        display: block

.invalid input:invalid
        border: 1px solid $Tomato
        background-color: rgba(255, 99, 71, 0.2)
        color: $Tomato

.attribution
    font-size: 11px
    text-align: center
    padding: 1rem 
    color: $White
    
.attribution a 
    color: $Grey

@media screen and (min-width 900px) 
    main 
        display: flex
        justify-content: center
        align-items: center
        background-color: $Dark-Slate-Grey
        padding: 1.5rem

    .card
        flex-direction: row-reverse
        gap: 1rem
        max-width: 928px
        padding: 24px
        border-radius: 1.5rem

    .confirmation
        padding: 0
        
    .card__title 
        font-size: 3.5rem
        margin-bottom: 2rem

    .card__content 
        display: flex
        flex-direction: column
        justify-content: center
        margin: 1rem

    picture 
        max-width: 400px

    dialog[open]
        background: transparent
        display: flex
        .card 
            height: auto
            max-width: 504px
            padding: 2rem 4rem
            margin: auto

    dialog::backdrop 
        background-color: $Charcoal-Grey

    
